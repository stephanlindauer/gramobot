#create-channel {
  background #231F20
  width 100%
  height 40%
  position relative
  top 50%
  transform translateY(-50%)

  img {
    height 70%
    left 50%
    width auto
    position absolute
    transform translatex(-50%)
  }

  .create {
    position absolute
    left 45%
    top 55%
    transform rotate(-12deg);
    -ms-transform: rotate(-12deg);
    -webkit-transform: rotate(-12deg);
    width 250px
    color _greyish(0.4);
    font-size 20px
  }

  .input-container {
    position absolute
    transform translateX(90%) translateY(50%)
    right 42%
    bottom 25%
    font-size 2.5rem
    transition right 1s, transform 1s, font-size 1s, bottom 1s;

    .hashtag {
      position relative
      color _grey-light
      display inline-block
      font-size 26px
    }

    .input {
      position relative
      top 12px
      left -6px
      display: inline-block;
      min-width: 160px;
      overflow: hidden;
      background-color transparent
      border none
      border-bottom 1px _grey-light solid
      padding 0px
      height 35px
      color _grey-light
      font-size 26px
    }
    ::-webkit-input-placeholder {
      color: rgb(90, 90, 90);
    }
    ::-moz-placeholder {
      color: rgb(90, 90, 90);
    }
    :-ms-input-placeholder {
      color: rgb(90, 90, 90);
    }
    :-moz-placeholder {
      color: rgb(90, 90, 90);
    }
    :focus {
      outline: none;
    }

    button {
      display inline-block
      width 20px
      height 20px
      margin-left 15px
      font-size 1.3rem
      color _greyish(0.4);
      background: url("/images/arrow.png");
      background-size: 100% 100%;
      background-repeat: no-repeat;
      cursor pointer
      opacity 1
      transition width 1s, height 1s, opacity 1s;
    }
  }
}

#create-channel.settled {
  height 10%
  top 0%
  transform translateY(0%)
  transition transform 2s, height 2s, top 2s;

  img {
    left 0%
    transform translatex(0%)
    height 100%
    transition left 1s, transform 1s, height 1s;
  }

  .create {
    visibility hidden
  }

  .input-container {
    right 0%
    transform translateY(50%)
    font-size 2rem
    bottom 50%
    transition right 1s, transform 1s, bottom 1s;

    .input {
      border-bottom 1px rgba(0,0,0,0) solid
    }

    button {
      margin-left 0px
      height 0px
      width 0px
    }
  }
}