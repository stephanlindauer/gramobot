#playerwrapper {
    width 100%
    height 70%
    position relative
    background rgba(255, 255, 255, 0.1)
    padding 5px

    #player {
        width 100%
        height 100%
    }

    #explainer{
        width: 80%;
        height: 80%;
        overflow: auto;
        margin: auto;
        position: absolute;
        top: 0; left: 0; bottom: 0; right: 0;
        font-size 26px
        color #ababab
        overflow hidden

        p{
            margin-bottom: 20px
        }
    }

}
