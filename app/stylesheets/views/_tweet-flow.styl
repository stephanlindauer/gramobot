#tweet-flow {
  height 28%
  width: 100%;
  background rgba(255, 255, 255, 0.1)
  position absolute
  bottom 0
  overflow hidden

  li {
    overflow hidden
    margin-top: 5px;
    margin-left: 5px;
    margin-right: 5px;
    color #fff
    font-size 20px
    list-style none
    height 65px
    position: relative;
    background-color rgba(0, 0, 0, 0.4)

    -webkit-animation-duration: 0.1s;
    -webkit-animation-timing-function: linear;
    -webkit-animation-delay: 0s;
    -webkit-animation-iteration-count: 1;
    -webkit-animation-play-state: running;
    -webkit-animation-name: fadeInTweet;

    animation-duration: 0.1s;
    animation-timing-function: linear;
    animation-delay: 0s;
    animation-iteration-count: 1;
    animation-play-state: running;

    animation-name: fadeInTweet;

    img {
      top: 5px;
      left: 5px;

      height 40px
      width 40px
      position absolute

      display inline-block
    }

    .userHandle {
      position: absolute
      left 45px
      top 5px
      font-size 16px
      margin-left 12px
      font-weight bold
      color #ababab
    }

    .text {
      position: absolute
      left 65px
      top 25px
      font-size: 16px
      padding-right 15px
      color #ababab
    }

  }
}
